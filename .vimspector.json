# Python
{
  "configurations": {
    "django": {
      "adapter": "debugpy",
      "breakpoints": {
        "exception": {
          "all": "N",
          "uncaught": "N"
        }
      },
      "configuration": {
        "request": "launch",
	      "python": "~/anaconda3/envs/django-env/bin/python3",
        "stopOnEntry": true,
        "program": "${workspaceRoot}/manage.py",
        "cwd": "${workspaceRoot}",
        "args": ["runserver", "localhost:8000"],
        "django": true
      }
    }
  }
}
